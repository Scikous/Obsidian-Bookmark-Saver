{
  "manifest_version": 3,
  "name": "Obsidian Bookmark Saver",
  "version": "1.2",
  "description": "Saves the current tab to designated Obsidian notes.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": ["http://127.0.0.1:8123/"],
  "action": {
    "default_popup": "html/popup.html"
  },
  "options_page": "html/options.html",
  "background": {
    "scripts": ["external/browser-polyfill.min.js", "background.js"]    
  },
  "web_accessible_resources": [
    {
      "resources": [ "html/helper.html" ],
      "matches": [ "<all_urls>" ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "@bookmark-saver-wizard",
      "strict_min_version": "109.0"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
	"default": "Alt+C",
	"mac": "Alt+C"
      }
    },
    "save-smart": {
      "suggested_key": {
        "default": "Ctrl+E",
        "mac": "Command+E"
      },
      "description": "Save to Obsidian (Smart)"
    },
    "save-immediate": {
      "suggested_key": {
        "default": "Alt+A",
        "mac": "Command+A"
      },
      "description": "Save to Obsidian (Immediate)"
    },

    "save-basic": {
      "suggested_key": {
        "default": "Alt+Z",
        "mac": "Alt+Z"
      },
      "description": "Save to Obsidian (General)"
    },
    "save-extra": {
      "suggested_key": {
        "default": "Alt+X",
        "mac": "Alt+X"
      },
      "description": "Save to Obsidian (Extra)"
    }
  }
}
